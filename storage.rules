rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Raw uploads go to submissions/{gameId}/{uid}/{filename}
    match /submissions/{gameId}/{userId}/{fileName} {
      allow read: if true; // gallery can be public once approved
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Approved public gallery copies
    match /gallery/{gameId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'host';
    }
  }
}
